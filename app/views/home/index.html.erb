<!-- INTRODUCTION -->
<section id="introduction">
  <div class="introstripe" >
    <div class="jumbotron vertical-center">
      <h1>Hello, 
        <% if current_user %>
          <%= current_user.name %>
        <% else %>
          beauty
        <% end %>
        !</h1><br>
      <h3>
        It's time to organize that closet of yours and get some new stuff
      </h3>
      <a href="#problem" class="btn btn-primary btn-lg">The problem</a>
    </div>
  </div>
</section>
<!-- PROBLEM -->
<section id="problem">
  <div class="problemstripe">
    <div class="jumbotron vertical-center" style="background-color:transparent !important">
      <h1>we buy way too many unnecessary things</h1><br/>
      <p>
        ineffective. money wasted. can't keep track of expired things.
      </p><br>
      <a href="#solution" class="btn btn-primary btn-lg">So how can we help, you ask?</a>
    </div>
  </div>
</section>
<!-- SOLUTION -->
<section id="solution">
  <div class="solutionstripe">
    <div class="jumbotron vertical-center" style="background-color:transparent !important">
      <h1>mybeautycase do the "keep tracking" for you</h1><br>
      <p>so you will have all the time to "make up" for your life.</p><br>
      <p><%= button_to 'Start organizing', users_path,:method => 'get', :class => "btn btn-primary btn-lg" %></p>
    </div>
  </div>
</section>