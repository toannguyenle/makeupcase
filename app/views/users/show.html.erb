<div class="row">
  <div id="signin" class="col-sm-4 col-sm-offset-4">
    <div>
      <% if @user.photos && @user.photos.last %>
        <%= image_tag @user.photos.last.image.url(:thumbnail), :class => "img-circle thumbnail" %>
      <% else %>
        <%= bootstrap_form_for(@photo, :url => {:action => :create, :controller => :photos}) do |f| %>
          <%= f.label :image, 'Your profile picture' %>
          <%= f.file_field :image%>
          <%= f.submit 'Submit', :class => 'btn btn-primary'%>
        <% end %>
      <% end %>
    </div>
    <table class="table table-hover">
      <tr>
        <td>Name</td>
        <th><%= @user.name%></th>
      </tr>
      <tr>
        <td>Email</td>
        <td><%= @user.email%></td>
      </tr>
      <tr>
        <td>Email subscription</td>
        <% if @agree_marketing %>
          <td>Yes</td>
        <% else %>
          <td>No</td>
        <% end %>
      </tr>
      <tr>
        <td>Privacy Settings</td>
        <% if @user.is_public %>
          <td>Public</td>
        <% else %>
          <td>Private</td>
        <% end %>
      </tr>
      <tr class="active">
        <td class="text-right">
          <%= link_to 'Back', products_path%>
          <%= link_to 'Edit', edit_user_path(@user)%>
        </td>
        <td class="text-left"><%= link_to 'Delete Account', @user, method: :delete, data: {confirm: 'Are you sure? All your content will be lost and you will have to start all over again.'} %></td>

      </tr>
    </table>
  </div>
</div>
