<div class="row">
  <div class="col-md-10 col-md-offset-1 text-center">
    <% if @products.count !=0 %>
      <h1 style="color:white"><%= current_user.name %>'s beauty case</h1>
        <% @products.each do |p| %>
          <div class="col-sm-6 col-md-3">
            <div class="innerdiv">
              <% if eval(p.image_urls) %>
                      <%= image_tag(eval(p.image_urls).first, :class => "img-rounded", :width => "100") %>
              <% end %>
            <div class="caption">
              <h5><strong><%= p.product_name %></strong></h5>
              <h5><small>by <%= p.brand %></small></h5>
              <span class="label label-default"><%= p.category %></span><br>
              <p>
                <strong>Size</strong>
                <%= p.size %><br>
                <strong>Ave price $</strong> <%= p.avg_price %><br>
                Opened on <%= p.date_first_use %><br>
                Expired on <%= p.date_expired %><br>
                <% if p.like_or_not %>
                  <span class="glyphicon glyphicon-ok"></span>
                <% else %>
                  <span class="glyphicon glyphicon-remove"></span>
                <% end %>
                <div class=".btn-group.btn-group-justified">
                  <button type="button" class="btn btn-info btn-xs">Like</button>
                  <button type="button" class="btn btn-danger btn-xs">I want One!</button>
                  <button type="button" class="btn btn-warning btn-xs"><%= link_to 'More info', product_path(p) %></button>
                  <div class="btn-group">
                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                      <span class="caret"></span>
                      <span class="sr-only">More</span>
                    </button>
                    <% if current_user%>
                      <ul class="dropdown-menu" role="menu">
                        <li><%= link_to ' More about this product ', product_path(p) %></li>
                        <li><%= link_to ' Edit ', edit_product_path(p) %></li>
                        <li class="divider"></li>
                        <li><%= link_to ' Delete ', p, method: :delete %></li>
                      </ul>
                    <% end %>
                  </div>
                </div>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <button type="button" class="btn btn-primary btn-lg btn-block">Your case is empty. Search to add new products or add your own.</button>
          <%= render './product_search/search'%>
        </div>
      </div>
    </div>
  <% end %>
</div>
